# update all the things
update() {
	local brew="brew update; brew upgrade; brew doctor;"
	local gem="gem update;"
	local npm="npm update -g;"
	local pip="pip freeze --local | grep -v '^\-e' | cut -d = -f 1  | xargs pip install -U"
	sh -c $brew$npm; sudo sh -c $gem$pip
}

# hat tip to Justin Workman <https://coderwall.com/xtagon>
mkcd() {
	mkdir -pv "$1" && cd "$1";
}
mkgit() {
	mkcd "$1" && git init;
}

