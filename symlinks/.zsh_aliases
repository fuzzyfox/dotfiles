# Shortcuts
alias c='clear'
alias :q='exit'
alias ll='ls -al'

# Utils
alias reload="reset && clear && exec $SHELL"
alias diff='git diff --no-index'
alias flushdns='sudo dscacheutil -flushcache;sudo killall -HUP mDNSResponder'
alias dotfiles="$HOME/.dotfiles/dotfiles"
alias readme='npx readme-md-generator'

# Services
alias pastebin='nc virtualhacker.net 9999'
alias exifconfig='curl ifconfig.co'
alias weather='wttr'

# Laravel
alias sail='sh $([ -f sail ] && echo sail || echo vendor/bin/sail)'
alias vapor='./vendor/bin/sail bin vapor'
alias tinker='./vendor/bin/sail tinker'
alias artisan='./vendor/bin/sail artisan'
alias art='artisan'

# Boat
alias boat='./bin/boat'
alias drop-cache='sudo bash -c "~/drop-cache"'

# WSL
alias beep='beep >/dev/null 2>&1 || powershell.exe "[console]::beep(1000,500);[console]::beep(1000,500);[console]::beep(1000,500);" >/dev/null 2>&1 || echo -ne "\a"';
alias sidekick='export GDK_BACKEND=x11;xfsettingsd --sm-client-disable >/dev/null 2>&1; xfce4-panel --sm-client-disable --disable-wm-check >/dev/null 2>&1 &'

